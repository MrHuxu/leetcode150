{{ define "detail" }}

<link href="//unpkg.com/semantic-ui@2.4.2/dist/components/menu.min.css" rel="stylesheet">
<link href="//unpkg.com/semantic-ui@2.4.2/dist/components/icon.min.css" rel="stylesheet">
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/styles/night-owl.min.css">

<style>
  #header {
    position: relative;
    padding: 2em;
    border-bottom: 1px solid rgba(34, 36, 38, .15);
  }

  #header>#links {
    position: absolute;
    right: 1em;
    bottom: 2em;
    padding: 0;
  }

  @media (max-width: 991px) {
    #header {
      padding: 0 2em 1.8em 2em;
    }

    #header>#links {
      position: unset;
      padding: 1em 0;
    }
  }

  #header>#links>#prev,
  #header>#links>#next {
    color: #606f7b !important;
  }

  #header>#links a {
    text-decoration: underline;
  }

  #document {
    padding: 2em;
  }

  #document h1,
  #document h2,
  #document h3,
  #document h4 {
    padding: 0 0 .6em 0;
    color: #3d4852 !important;
  }

  #document>#question-link {
    text-decoration: underline;
    color: lightcoral;
    font-weight: 500;
  }

  li {
    line-height: 1.9em;
  }

  p,
  li {
    color: #606f7b;
  }

  blockquote {
    padding: 15px 0 15px 15px;
    margin: 0 0 18px;
    border-left: 5px solid #D1D0CE;
    line-height: 28px;
    font-weight: normal;
    font-size: 14px;
    font-style: italic;
    color: #696969;
  }

  p code,
  li code {
    border-width: 1px;
    border-style: solid;
    border-color: rgb(221, 221, 221);
    border-image: initial;
    border-radius: 4px;
    padding: 0 3px;
  }

  code {
    font-family: Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
    font-size: 14px;
  }

  #tab {
    width: calc(100% - 40px);
    padding: 0 20px;
  }

  .chosen-lang {
    display: block !important;
  }

  .unchosen-lang {
    display: none !important;
  }

  pre {
    position: relative;
    background-image: linear-gradient(30deg, #011627, #011627) !important;
    font-family: Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace !important;
    color: #f1f5f8 !important;
    padding-left: 3.2rem !important;
    padding-right: 1.5rem !important;
    margin-top: 1rem !important;
    margin-bottom: 1rem !important;
    border-bottom-width: 4px !important;
    border-color: #606F7B !important;
    overflow: auto !important;
  }

  pre code {
    line-height: 1.5;
  }

  pre>.line-num-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 2rem;
    border-right: #D1D0CE solid 1px;
  }

  .line-num-container>div {
    text-align: right;
    color: #A0AfBB;
  }
</style>

<div id="header">
  <div id="links">
    {{ if .Prev }}
    <a id="prev" href="/{{ .Prev.ID }}">Previous Question</a>
    &nbsp;&nbsp;
    {{ end }}
    {{ if .Next }}
    <a id="next" href="/{{ .Next.ID }}">Next Question</a>
    &nbsp;&nbsp;
    {{ end }}

    <a href="/">
      <svg width="12px" height="12px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--! Font Awesome Pro 6.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M511.8 287.6L512.5 447.7C512.5 450.5 512.3 453.1 512 455.8V472C512 494.1 494.1 512 472 512H456C454.9 512 453.8 511.1 452.7 511.9C451.3 511.1 449.9 512 448.5 512H392C369.9 512 352 494.1 352 472V384C352 366.3 337.7 352 320 352H256C238.3 352 224 366.3 224 384V472C224 494.1 206.1 512 184 512H128.1C126.6 512 125.1 511.9 123.6 511.8C122.4 511.9 121.2 512 120 512H104C81.91 512 64 494.1 64 472V360C64 359.1 64.03 358.1 64.09 357.2V287.6H32.05C14.02 287.6 0 273.5 0 255.5C0 246.5 3.004 238.5 10.01 231.5L266.4 8.016C273.4 1.002 281.4 0 288.4 0C295.4 0 303.4 2.004 309.5 7.014L416 100.7V64C416 46.33 430.3 32 448 32H480C497.7 32 512 46.33 512 64V185L564.8 231.5C572.8 238.5 576.9 246.5 575.8 255.5C575.8 273.5 560.8 287.6 543.8 287.6L511.8 287.6z"/></svg>
    </a>
  </div>

  <span>
    <h2>{{ .ID }}. {{ .Title }}</h2>
  </span>
</div>

<div id="document">
  <a id="question-link" target="_blank" href="https://leetcode.com/problems/{{ .Slug }}/">>>题目链接</a>
  <p>{{ .Document }}</p>
</div>

<div x-data="{ lang: 'go' }">
  <div id="tab" class="ui top attached tabular menu">
    {{ range $lang, $content := .Code }}
    <div :class="lang == '{{ $lang }}' ? 'item active' : 'item'" x-on:click="lang = '{{ $lang }}'">
      {{ getDisplayLang $lang }}
    </div>
    {{ end }}
  </div>

  {{ range $lang, $content := .Code }}
  <pre style="display:none" :class="lang == '{{ $lang }}' ? 'chosen-lang' : 'unchosen-lang'"><code class="{{ $lang }}">{{ $content }}</code></pre>
  {{ end }}
</div>

<script src="//unpkg.com/alpinejs" defer></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/highlight.min.js"></script>
{{ range $lang, $content := .Code }}
<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/languages/{{ $lang }}.min.js"></script>
{{ end }}
<script>
  hljs.configure({ tabReplace: '    ' })
  hljs.initHighlightingOnLoad();
</script>

<script>
  document.addEventListener('keydown', event => {
    {{ if .Prev }}
      if (event.code === 'ArrowLeft') {
        window.location.href = '/{{ .Prev.ID }}';
      }
    {{ end }}


    {{ if .Next }}
      if (event.code === 'ArrowRight') {
        window.location.href = '/{{ .Next.ID }}';
      }
    {{ end }}
  });
</script>

<script>
  for (let pre of document.getElementsByTagName('pre')) {
    const lineNumContainer = document.createElement('code');
    lineNumContainer.classList.add('line-num-container');
    for (let i = 1; i <= pre.innerText.trim('\n').split('\n').length; i++) {
      const ele = document.createElement('div');
      ele.innerText = i;
      lineNumContainer.appendChild(ele);
    }

    pre.appendChild(lineNumContainer);
  }
</script>

{{ end }}