{{ define "detail" }}

<style>
  #header {
    position: relative;
    padding: 2em;
    border-bottom: 1px solid rgba(34, 36, 38, .15);
  }

  #header>#links {
    position: absolute;
    right: 1em;
    bottom: 2em;
    padding: 0;
  }

  @media (max-width: 991px) {
    #header {
      padding: 0 2em 1.8em 2em;
    }

    #header>#links {
      position: unset;
      padding: 1em 0;
    }
  }

  #header>#links>#prev,
  #header>#links>#next {
    color: #606f7b !important;
    text-decoration: underline;
  }

  #document {
    padding: 2em;
  }

  #document h1,
  #document h2,
  #document h3,
  #document h4 {
    padding: 0 0 .6em 0;
    color: #3d4852 !important;
  }

  #document>#question-link {
    text-decoration: underline;
    color: lightcoral;
    font-weight: 500;
  }

  li {
    line-height: 1.9em;
  }

  p,
  li {
    color: #606f7b;
  }

  blockquote {
    padding: 15px 0 15px 15px;
    margin: 0 0 18px;
    border-left: 5px solid #D1D0CE;
    line-height: 28px;
    font-weight: normal;
    font-size: 14px;
    font-style: italic;
    color: #696969;
  }

  p code,
  li code {
    border-width: 1px;
    border-style: solid;
    border-color: rgb(221, 221, 221);
    border-image: initial;
    border-radius: 4px;
    padding: 0 3px;
  }

  code {
    font-family: 'JetBrains Mono', Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
    font-size: 14px;
    font-variant-ligatures: contextual;
  }

  #tab {
    padding: 0 20px;
  }

  .chosen-lang {
    display: block !important;
  }

  .unchosen-lang {
    display: none !important;
  }

  pre {
    position: relative;
    background-image: linear-gradient(30deg, #011627, #011627) !important;
    font-family: Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace !important;
    color: #f1f5f8 !important;
    padding-left: 3.2rem !important;
    padding-right: 1.5rem !important;
    margin-top: 1rem !important;
    margin-bottom: 1rem !important;
    border-bottom-width: 4px !important;
    border-color: #606F7B !important;
    overflow: auto !important;
  }

  pre code {
    line-height: 1.5;
  }

  pre>.line-num-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 3rem;
    height: 100%;
    padding-top: 2em !important;
    border-right: #D1D0CE solid 1px;
  }

  .line-num-container>div {
    text-align: right;
    color: #A0AfBB;
  }
</style>

<link href="https://cdn.jsdelivr.net/npm/highlight.js@9.17.1/styles/night-owl.min.css" rel="stylesheet">

<div id="header">
  <div id="links">
    {{ if .Prev }}
    <a id="prev" href="/{{ .Prev.ID }}">Previous Question</a>
    {{ end }}
    &nbsp;&nbsp;
    {{ if .Next }}
    <a id="next" href="/{{ .Next.ID }}">Next Question</a>
    {{ end }}
    &nbsp;&nbsp;

    <a href="/"><i class="home icon"></i></a>
  </div>

  <span>
    <h2>{{ .ID }}. {{ .Title }}</h2>
  </span>
</div>

<div id="document">
  <a id="question-link" target="_blank" href="https://leetcode.com/problems/{{ .Slug }}/">>>题目链接</a>
  <p>{{ .Document }}</p>
</div>

<div x-data="{ lang: 'go' }">
  <div id="tab" class="ui top attached tabular menu">
    {{ range $lang, $content := .Code }}
    <div :class="lang == '{{ $lang }}' ? 'item active' : 'item'" x-on:click="lang = '{{ $lang }}'">
      {{ getDisplayLang $lang }}
    </div>
    {{ end }}
  </div>

  {{ range $lang, $content := .Code }}
  <pre style="display:none" :class="lang == '{{ $lang }}' ? 'chosen-lang' : 'unchosen-lang'">
    <code class="{{ $lang }}">{{ $content }}</code>
  </pre>
  {{ end }}
</div>

<script src="//unpkg.com/alpinejs" defer></script>
<script src="https://cdn.bootcss.com/highlight.js/10.5.0/highlight.min.js"></script>
{{ range $lang, $content := .Code }}
<script src="https://cdn.bootcss.com/highlight.js/10.5.0/languages/{{ $lang }}.min.js"></script>
{{ end }}
<script>
  hljs.configure({ tabReplace: '  ' })
  hljs.initHighlightingOnLoad();
</script>

<script>
document.addEventListener('keydown', event => {
  {{ if .Prev }}
  if (event.code === 'ArrowLeft') {
    window.location.href = '/{{ .Prev.ID }}';
  }
  {{ end }}


  {{ if .Next }}
  if (event.code === 'ArrowRight') {
    window.location.href = '/{{ .Next.ID }}';
  }
  {{ end }}
});
</script>

<script>
  for (let pre of document.getElementsByTagName('pre')) {
    console.log(pre.innerText.split('\n').length);
    const lineNumContainer = document.createElement('code');
    lineNumContainer.classList.add('line-num-container');
    for (let i = 1; i <= pre.innerText.split('\n').length - 1; i++) {
      const ele = document.createElement('div');
      ele.innerText = i;
      lineNumContainer.appendChild(ele);
    }

    pre.appendChild(lineNumContainer);
  }
</script>

{{ end }}