{{ define "index" }} <style>
	#header {
		position: relative;
		padding: 2em;
	}

	#header h1 {
		color: #3d4852;
	}

	#header>#desc {
		padding: 1em 0;
		right: 1em;
		bottom: 2em;
	}

	@media (min-width: 992px) {
		#header>#desc {
			position: absolute;
			padding: 0;
		}
	}

	#header>#desc>a {
		text-decoration: underline;
		color: #606f7b !important;
	}

	.item {
		position: relative;
		padding: 1em 1.5em;
		border-top: 1px solid rgba(34, 36, 38, .15);
		border-bottom: 1px solid rgba(255, 255, 255, .1);
	}

	.item>.label {
		position: absolute;
		right: 1.5em;
	}

	.item:hover {
		background-color: ivory;
	}
</style>

<div id="header">
	<div id="desc">
		Language: &nbsp;
		<a target="_blank" href="https://golang.org/">
			Go
		</a>
		&nbsp;&nbsp;
		Author: &nbsp;
		<a target="_blank" href="https://xhu.me/">
			xhu
		</a>
	</div>

	<span>
		<h2> LeetCode 150 </h2>
	</span>
</div>

{{ range . }}
<div class="item">
	<a href="/{{ .ID }}">{{ .ID }}. {{ .Title }}</a>

	{{ if eq .Difficulty 1 }}
		<a class="ui green mini label">Easy</a>
	{{ else if eq .Difficulty 2 }}
		<a class="ui yellow mini label">Medium</a>
	{{ else }}
		<a class="ui red mini label">Hard</a>
	{{ end }}
</div>
{{ end }}

{{ end }}